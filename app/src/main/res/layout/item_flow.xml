<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:paddingEnd="22dp"
                android:paddingStart="22dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

    <TextView
        android:id="@+id/text_flow_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        android:text="Customer Registration Flow"/>

    <TextView
        android:id="@+id/text_flow_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/text_flow_name"
        android:layout_alignLeft="@id/text_flow_name"
        android:textColor="@color/light_gray"
        android:text="7 Questions"/>


    <TextView
        android:id="@+id/text_pending_submissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/pending"
        android:gravity="center_vertical|center_horizontal"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentEnd="true"
        android:text="391"
        android:visibility="visible"
        />

</RelativeLayout>



