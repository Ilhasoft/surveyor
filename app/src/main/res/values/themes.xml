<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RapidTheme" parent="RapidTheme.Base" />

    <style name="RapidTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_lightest</item>
    </style>

    <style name="LoginTheme">
        <item name="colorControlNormal">@color/primary_lightest</item>
    </style>

    <style name="RapidTheme.FullScreen" parent="@style/RapidTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>